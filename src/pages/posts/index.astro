---
import Base from "../../layouts/Base.astro";
import { BRAND } from "../../config";

const postsGlob = import.meta.glob('./*.{md,mdx}', { eager: true });
const posts = Object.entries(postsGlob).map(([path, mod]) => {
  const filename = path.replace(/^\.\//, '').replace(/\.(md|mdx)$/, '');
  return {
    url: `/posts/${filename}`,
    fm: mod.frontmatter ?? {}
  };
}).sort((a, b) => new Date(b.fm.pubDate) - new Date(a.fm.pubDate));
---
<Base title={`Posts — ${BRAND.title}`} description={BRAND.description} canonical={`${BRAND.homeUrl}/posts`}>
  <h1>All Posts</h1>
  {posts.map(p => (
    <div class="post-card">
      <a href={p.url}><strong>{p.fm.title}</strong></a>
      <div class="post-meta">{p.fm.pubDate} · {p.fm.tags?.map((t)=> (<a class="tag" href={`/tags/${t}`}>{t}</a>))}</div>
      <p>{p.fm.description}</p>
    </div>
  ))}
</Base>