---
import { BRAND } from "../config";
const { title = BRAND.title, description = BRAND.tagline, canonical } = Astro.props;
---
<html lang="en">
  <head>
    <!-- Elegant serif for headings + modern sans for body/code -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600;700&family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="alternate" type="application/rss+xml" title={BRAND.title} href="/rss.xml" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="/styles/theme.css" />
    <slot name="analytics" />
  </head>
  <body>
    <header class="site-header">
      <a href="/" class="brand">{BRAND.title}</a>
      <nav class="nav">
        <a href="/blog">Blog</a>
        <a href="/about">About</a>
        <a href="/now">Now</a>
        <a href="/subscribe">Subscribe</a>
        <a href="/rss.xml" aria-label="RSS">RSS</a>
        <button id="theme-toggle" aria-label="Toggle theme">⭘</button>
      </nav>
    </header>
    <main class="site-main">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="muted">© {new Date().getFullYear()} {BRAND.title}</div>
    </footer>
    <script>
      // simple theme toggle, default to system
      const btn = document.getElementById('theme-toggle');
      const prefers = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
      const saved = localStorage.getItem('theme');
      const set = (t) => { document.documentElement.dataset.theme = t; localStorage.setItem('theme', t); };
      set(saved || (prefers ? 'dark' : 'light'));
      btn?.addEventListener('click', () => {
        const now = document.documentElement.dataset.theme === 'dark' ? 'light' : 'dark';
        set(now);
      });
    </script>
    <div id="progress" style="position:fixed;left:0;top:0;height:3px;width:0;background:var(--accent);z-index:9999;"></div>
<script>
  const bar = document.getElementById('progress');
  const onScroll = () => {
    const h = document.documentElement;
    const pct = (h.scrollTop) / (h.scrollHeight - h.clientHeight) * 100;
    bar.style.width = pct + '%';
  };
  document.addEventListener('scroll', onScroll, { passive: true });
  onScroll();
</script>

  </body>
</html>
